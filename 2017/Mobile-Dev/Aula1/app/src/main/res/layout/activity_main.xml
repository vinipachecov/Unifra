<?xml version="1.0" encoding="utf-8"?><!DOCTYPE RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.viniciuspv.aula1.MainActivity">

    <TextView
        android:text="Nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/labelNome"
        android:textColor="#0000FF"
        android:textSize="20sp"
        android:background="#00FF00"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/Editpassword"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="textPassword"
        android:text="****" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:ems="10"
        android:id="@+id/editNome"
        android:layout_below="@+id/labelNome"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Digite seu NOme"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:id="@+id/textView9" />

    <Button
        android:text="Limpar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BotaoLimpar"
        android:onClick="cadastrarClick"
        android:layout_below="@+id/editrepeatPasword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:elevation="1dp"
        android:paddingBottom="0dp"
        android:padding="0sp"
        android:paddingEnd="0sp"
        android:paddingLeft="0sp" />

    <TextView
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EditEndereço"
        android:textColor="#0000FF"
        android:textSize="20sp"
        android:background="#00FF00"
        android:layout_below="@+id/editNome"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="meuemail@email.com"
        android:ems="10"
        android:id="@+id/Editemail"
        android:layout_marginTop="33dp"
        android:layout_alignTop="@+id/EditEndereço"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textColor="#0000FF"
        android:textSize="20sp"
        android:background="#00FF00"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/Editemail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Repita Senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textColor="#0000FF"
        android:textSize="20sp"
        android:background="#00FF00"
        android:layout_below="@+id/Editpassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:ems="10"
        android:id="@+id/editrepeatPasword"
        android:inputType="textPassword"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="CADASTRAR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BotãoCadastrar"
        android:onClick="cadastrarClick"
        android:elevation="1dp"
        android:paddingBottom="0dp"
        android:padding="0sp"
        android:paddingEnd="0sp"
        android:paddingLeft="0sp"
        android:layout_below="@+id/BotaoLimpar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
