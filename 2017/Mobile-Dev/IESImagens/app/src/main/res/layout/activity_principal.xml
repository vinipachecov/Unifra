<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vinipachecov.iesimagens.Principal">

    <AutoCompleteTextView
        android:id="@+id/iesautoCompleteTextView"
        android:layout_width="368dp"
        android:layout_height="43dp"
        android:layout_marginLeft="16dp"
        android:hint="Digite nome da Instituição de Ensino"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/logoIESbutton"
        android:layout_width="222dp"
        android:layout_height="72dp"
        android:onClick="showLogo"
        android:text="Mostrar Logo daUniversidade"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="58dp"
        app:layout_constraintTop_toBottomOf="@+id/iesautoCompleteTextView"
        tools:layout_constraintLeft_creator="1" />

    <ImageView
        android:id="@+id/logoIESimageView"
        android:layout_width="117dp"
        android:layout_height="108dp"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="39dp"
        app:layout_constraintTop_toBottomOf="@+id/logoIESbutton"
        tools:layout_constraintLeft_creator="1" />

</android.support.constraint.ConstraintLayout>
