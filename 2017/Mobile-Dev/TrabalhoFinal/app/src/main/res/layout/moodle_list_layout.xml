<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vinipachecov.trabalhofinal.MoodleList">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:background="@color/background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/logomodleinvertido"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="427dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />


    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="461dp"
        android:layout_height="58dp"
        android:layout_marginLeft="1dp"
        android:background="@color/BottomNavigator"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="1dp">

        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="79dp"
            android:layout_height="55dp"
            android:layout_gravity="right"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/home" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            app:srcCompat="@drawable/helpicon" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/logout" />
    </LinearLayout>

    <ListView
        android:id="@+id/disciplinasListView"
        android:layout_width="394dp"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="1dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav"
        app:layout_constraintLeft_toLeftOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

</android.support.constraint.ConstraintLayout>
